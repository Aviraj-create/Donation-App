<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.EventsActivity">

    <RelativeLayout
        android:id="@+id/StatusBar"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/primary_red" >

        <ImageView
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:src="@drawable/ic_arrow_back"
            android:layout_marginLeft="15dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add Event"
            android:textColor="@color/white"
            android:textSize="25dp"
            android:layout_centerInParent="true"
            android:fontFamily="@font/poppins_medium"/>
    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/photo"
        android:layout_below="@id/StatusBar"
        android:layout_marginBottom="10dp">

    <ImageView
        android:id="@+id/ngo_profile_pic"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:src="@drawable/profile_avatar1" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ngo_profile_pic_add"
        android:layout_below="@id/ngo_profile_pic"
        android:layout_marginLeft="-25dp"
        android:layout_marginTop="-24dp"
        android:layout_toRightOf="@id/ngo_profile_pic"
        android:src="@drawable/ic_plus_vector" />

    </RelativeLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/photo"
        android:layout_margin="15dp"
        android:orientation="vertical">

        <EditText
            android:id="@+id/EventTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Event Title"
            android:background="@drawable/rectangle_1"
            android:textColorHint="#A0A0A0"
            android:textSize="20dp"
            android:inputType="text"
            android:paddingLeft="5sp"
            android:fontFamily="@font/poppins_regular"
            android:layout_marginBottom="10dp"/>

        <EditText
            android:id="@+id/EventDescription"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:hint="Description"
            android:background="@drawable/rectangle_1"
            android:textColorHint="#A0A0A0"
            android:textSize="20dp"
            android:inputType="textMultiLine"
            android:paddingLeft="5sp"
            android:fontFamily="@font/poppins_regular"
            android:layout_marginBottom="10dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:orientation="horizontal">

            <TextView
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Event Time"
                android:textSize="20dp"
                android:paddingLeft="5sp"
                android:fontFamily="@font/poppins_regular"/>

            <View
                android:layout_width="10dp"
                android:layout_height="match_parent"/>

            <TextView
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Event Date"
                android:textSize="20dp"
                android:paddingLeft="5sp"
                android:fontFamily="@font/poppins_regular"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal">

            <EditText
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:hint="Event Time"
                android:textColorHint="#A0A0A0"
                android:textSize="20dp"
                android:inputType="time"
                android:paddingLeft="5sp"
                android:fontFamily="@font/poppins_regular"/>



            <View
                android:layout_width="10dp"
                android:layout_height="match_parent"/>

            <EditText
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:hint="Event Date"
                android:textColorHint="#A0A0A0"
                android:textSize="20dp"
                android:inputType="date"
                android:paddingLeft="5sp"
                android:fontFamily="@font/poppins_regular"/>

        </LinearLayout>

        <EditText
            android:id="@+id/EventAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Address"
            android:background="@drawable/rectangle_1"
            android:textColorHint="#A0A0A0"
            android:textSize="20dp"
            android:inputType="text"
            android:paddingLeft="5sp"
            android:fontFamily="@font/poppins_regular"
            android:layout_marginBottom="10dp"/>

        <EditText
            android:id="@+id/EventContact"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Contact Details"
            android:background="@drawable/rectangle_1"
            android:textColorHint="#A0A0A0"
            android:textSize="20dp"
            android:inputType="text"
            android:paddingLeft="5sp"
            android:fontFamily="@font/poppins_regular"
            android:layout_marginBottom="10dp"/>

        <EditText
            android:id="@+id/EventEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Email"
            android:background="@drawable/rectangle_1"
            android:textColorHint="#A0A0A0"
            android:textSize="20dp"
            android:inputType="text"
            android:paddingLeft="5sp"
            android:fontFamily="@font/poppins_regular"
            android:layout_marginBottom="10dp"/>

        <Button
            android:text="Submit"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:fontFamily="@font/poppins_regular"
            android:textSize="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/rectangle_6"
            android:layout_gravity="center"/>



    </LinearLayout>

</RelativeLayout>